    <RelativeLayout
        android:id="@+id/right_chat_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/sendbtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:background="@drawable/right_bg"
            android:src="@drawable/ic_chat_person" />

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/sendbtn"
            android:background="@drawable/right_chat_bg"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:text="agdgagjsas"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:src="@drawable/volume"
        app:layout_constraintStart_toStartOf="@+id/left_chat_view"
        app:layout_constraintTop_toBottomOf="@+id/left_chat_view" />

    <ImageView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_copy"
        app:layout_constraintStart_toEndOf="@+id/voice"
        app:layout_constraintTop_toBottomOf="@+id/left_chat_view" />
    <!--    </LinearLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>